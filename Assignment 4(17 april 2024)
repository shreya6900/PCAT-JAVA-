Printing array elements in reverse order

package arrays;

public class RevArray 
{

	public static void main(String[] args) 
	{
		int a[]= {3,4,5,6,7};
		for(int i=a.length-1;i>=0;i--)
		{
			System.out.print(a[i]+" ");
		}
		// TODO Auto-generated method stub

	}

}

