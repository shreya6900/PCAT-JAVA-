Swapping using third variable

package com;

public class Swapping {

	public static void main(String[] args) 
	{
		int a=10,b=20,c;
		System.out.println(" Numbers before swapping a is " +a +" b is " +b);
		c=a;
		a=b;
		b=c;
		System.out.println(" Numbers after swapping a is " +a +" b is " +b);

	}

}

